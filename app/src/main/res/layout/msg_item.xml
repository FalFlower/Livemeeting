<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp"
    android:background="@color/chat_bac">

    <LinearLayout
        android:id="@+id/left_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:padding="10dp">
        <LinearLayout
            android:id="@+id/left_layout_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/left_avatar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center" />
            <TextView
                android:id="@+id/left_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bac_msg_left"
                android:gravity="center"
                android:adjustViewBounds="true"
                android:maxWidth="300dp"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:textColor="#000"
                android:textSize="20sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/left_layout_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/left_avatar_pic"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="top" />
            <ImageView
                android:id="@+id/left_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:gravity="center"
                android:maxHeight="400dp"
                android:maxWidth="100dp"
                android:minHeight="84dp"
                android:minWidth="84dp"
                android:paddingBottom="4dp"
                android:paddingTop="3dp"
                android:src="@drawable/bac_1"
                android:layout_margin="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/left_layout_vote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/left_avatar_vote"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="top"
                android:layout_marginBottom="4dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bac_msg_left"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="10dp"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="10dp">
                    <TextView
                        android:id="@+id/left_text_vote"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:adjustViewBounds="true"
                        android:maxWidth="300dp"
                        android:paddingBottom="4dp"
                        android:text="测试投票一下"
                        android:paddingTop="5dp"
                        android:textColor="#000"
                        android:textSize="20sp"
                        android:layout_marginRight="5dp"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">
                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:src="@drawable/ic_cricle"
                            android:layout_gravity="center"
                            android:layout_marginRight="7dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="是"
                            android:textColor="#000"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">
                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:src="@drawable/ic_cricle"
                            android:layout_gravity="center"
                            android:layout_marginRight="7dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="否"
                            android:textColor="#000"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/right_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="right"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:padding="10dp">
        <LinearLayout
            android:id="@+id/right_layout_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="right">
            <TextView
                android:id="@+id/right_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bac_msg_right"
                android:gravity="center"
                android:adjustViewBounds="true"
                android:maxWidth="300dp"
                android:textSize="18sp"
                android:text="测试一下"
                android:textColor="@color/white"
                android:layout_margin="10dp"
                android:padding="10dp"/>
            <ImageView
                android:id="@+id/right_avatar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/right_layout_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <ImageView
                android:id="@+id/right_pic"
                android:layout_width="90dp"
                android:layout_height="160dp"
                android:scaleType="fitXY"
                android:gravity="center"
                android:paddingTop="3dp"
                android:paddingBottom="4dp"
                android:adjustViewBounds="true"
                android:maxHeight="400dp"
                android:maxWidth="100dp"
                android:minHeight="84dp"
                android:minWidth="84dp"
                android:src="@drawable/bac_1"
                android:layout_margin="10dp"/>
            <ImageView
                android:id="@+id/right_avatar_pic"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="top"
                android:layout_marginBottom="4dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/right_layout_vote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bac_msg_right"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingTop="10dp"
                android:layout_margin="10dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="10dp">
                    <TextView
                        android:id="@+id/right_text_vote"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:adjustViewBounds="true"
                        android:maxWidth="300dp"
                        android:paddingBottom="4dp"
                        android:text="测试投票一下"
                        android:paddingTop="5dp"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:layout_marginRight="5dp"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">
                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:src="@drawable/ic_cricle"
                            android:layout_gravity="center"
                            android:layout_marginRight="7dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="是"
                            android:textColor="@color/white"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">
                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:src="@drawable/ic_cricle"
                            android:layout_gravity="center"
                            android:layout_marginRight="7dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="否"
                            android:textColor="@color/white"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
            <ImageView
                android:id="@+id/right_avatar_vote"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="4dp"/>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>