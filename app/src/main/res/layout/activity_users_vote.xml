                            />
                    </LinearLayout>

                    <View
                        android:background="#FFF"
                        android:elevation="10dp"
                        android:layout_height="5dp"
                        android:layout_width="match_parent"/>
                </LinearLayout>
                <LinearLayout android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/view7"
                    android:background="#f2f2f2">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:minHeight="38dp"
                        android:layout_marginRight="20dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp">

                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/check7"/>
                        <TextView
                            android:gravity="center_vertical"
                            android:id="@+id/this_item7"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            />
                    </LinearLayout>

                    <View
                        android:background="#FFF"
                        android:elevation="10dp"
                        android:layout_height="10dp"
                        android:layout_width="match_parent"/>
                </LinearLayout>
                <LinearLayout android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/view8"
                    android:background="#f2f2f2">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:minHeight="38dp"
                        android:layout_marginRight="20dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp">

                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/check8"/>
                        <TextView
                            android:gravity="center_vertical"
                            android:id="@+id/this_item8"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            />
                    </LinearLayout>

                    <View
                        android:background="#FFF"
                        android:elevation="10dp"
                        android:layout_height="5dp"
                        android:layout_width="match_parent"/>
                </LinearLayout>
                <LinearLayout android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/view9"
                    android:background="#f2f2f2"
                    android:visibility="visible">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:minHeight="38dp"
                        android:layout_marginRight="20dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp">

                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/check9"/>
                        <TextView
                            android:gravity="center_vertical"
                            android:id="@+id/this_item9"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            />
                    </LinearLayout>

                    <View
                        android:background="#FFF"
                        android:elevation="10dp"
                        android:layout_height="5dp"
                        android:layout_width="match_parent"/>
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFF"
            android:elevation="3dp"
            android:minHeight="138dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="3dp"
            android:paddingBottom="20dp"
            tools:targetApi="lollipop">
            <TextView
                android:id="@+id/end_time_get"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="截至时间：04-15 10：42"
                android:textSize="14sp"
                android:layout_marginTop="10dp"/>

        </LinearLayout>

        <Button
            android:id="@+id/vote_vote_vote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="60dp"
            android:layout_marginTop="30dp"
            style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
            android:text="投票"/>

    </LinearLayout>

</ScrollView>