<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".relationship.ShowAddFriendActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/avatar_friend"
                android:src="@drawable/left_ava"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/nick_name_friend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:textSize="20sp"
                    android:text="默认"/>
                <TextView
                    android:id="@+id/id_friend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#9d9c9c"
                    android:textSize="13sp"
                    android:text="123456789"/>
            </LinearLayout>
        </LinearLayout>

        <EditText
            android:id="@+id/edit_wording_friend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
            android:layout_marginTop="3dp"
            android:lines="3"
            android:hint="请输入好友验证信息"
            />
    </LinearLayout>
    <Button
        android:id="@+id/next_btn_friend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#1eb9f2"
        android:layout_margin="5dp"
        android:text="下一步"
        android:textColor="#fff"
        />
</FrameLayout>